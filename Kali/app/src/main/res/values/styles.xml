<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="popUpAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_fade_in</item>
        <item name="android:windowExitAnimation">@anim/scale_fade_out</item>
    </style>
    <style name="pinBox">
        <item name="android:background">@null</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="tine">
        <item name="android:gravity">bottom|center_horizontal|center_vertical</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nunitoblack</item>
        <item name="android:backgroundTint">@color/lightgreen</item>
        <item name="android:textColor">@color/darkgreen</item>
    </style>
    <style name="imageBtn">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:fontFamily">@font/nunitoblack</item>
        <item name="android:background">@null</item>
    </style>
</resources>
